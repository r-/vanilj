{
  "name": "@vanilj/core",
  "version": "1.0.0",
  "description": "Vanilj Core - Reactive framework with signals, effects, and DOM utilities",
  "type": "module",
  "main": "./dist/vanilj-core.umd.js",
  "module": "./dist/vanilj-core.js",
  "exports": {
    ".": {
      "import": "./dist/vanilj-core.js",
      "require": "./dist/vanilj-core.umd.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:dev && npm run build:prod && npm run build:copy",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:copy": "node scripts/copy-dist.js",
    "dev": "vite build --watch --mode development",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "terser": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "reactive",
    "signals",
    "effects",
    "dom",
    "vanilla",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vanilj.git",
    "directory": "packages/vanilj-core"
  }
}