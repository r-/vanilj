{
  "name": "@vanilj/plugin-store",
  "version": "1.0.0",
  "description": "Vanilj Store Plugin - State management with persistence, middleware, and undo/redo support",
  "type": "module",
  "main": "./dist/vanilj-plugin-store.umd.js",
  "module": "./dist/vanilj-plugin-store.js",
  "exports": {
    ".": {
      "import": "./dist/vanilj-plugin-store.js",
      "require": "./dist/vanilj-plugin-store.umd.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "dev": "vite build --watch --mode development",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "@vanilj/core": "^1.0.0"
  },
  "devDependencies": {
    "@vanilj/core": "*",
    "vite": "^5.0.0",
    "terser": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "vanilj",
    "store",
    "state-management",
    "persistence",
    "middleware",
    "plugin"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vanilj.git",
    "directory": "packages/plugin-store"
  }
}